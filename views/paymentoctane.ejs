<style>
    body {
        font-family: Arial, sans-serif;
        /* background-color: black; */
        text-align: center;
        background-image: url('https://m.media-amazon.com/images/I/81L7KbwSiuL.jpg');
        
    }

    h1 {
        color: #333;
        margin-top: 5%;
    }

    form {
        max-width: 400px;
        margin: 0 auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    label {
        display: block;
        margin-top: 10px;
    }

    input[type="text"],
    input[type="tel"],
    input[type="email"],
    select {
        width: 100%;
        padding: 5px;
        margin-top: 15px; /* Increase top margin for input elements */
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    select {
        height: 30px;
    }

    input[type="submit"] {
        background-color: #007BFF;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        cursor: pointer;
        margin-top: 10px;
    }

    input[type="submit"]:hover {
        background-color: #0056b3;
    }
</style>



</head>
<body>
    <h1>Payment Details</h1>

    <form action="process_payment.php" method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>

        <label for="address">Address:</label>
        <input type="text" id="address" name="address" required>

        <label for="phone">Phone Number:</label>
        <input type="tel" id="phone" name="phone" required>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>

        
    <h1>Choose a Payment Option:</h1>
    <div class="payment-option" data-url="https://buy.stripe.com/test_8wM9EsdkAcpObYIbIT">
        <!-- <img src="credit-card.png" alt="Credit Card"> -->
        <p>Card</p>
    </div>

    <script>
        // Add a click event listener to the payment option div
        document.querySelector('.payment-option').addEventListener('click', function() {
            // Get the URL from the data-url attribute
            const url = this.getAttribute('data-url');
            
            // Redirect the user to the specified URL
            window.location.href = url;
        });
        </script>
       <div class="payment-option">
        <!-- <img src="credit-card.png" alt="Credit Card"> -->
        <p><a href="/cod">COD</a></p>
    </div>

   
</body>
